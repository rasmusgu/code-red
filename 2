import tcod as libtcod
fromt input_handlers import handle_keys

def main():
    # variables
    screen_width = 80
    screen_height = 50
    player_x = int(screen_width / 2)
    player_y = int(screen_height / 2)

    # font settings
    libtcod.console_set_custom_font('arial10x10.png', libtcod.FONT_TYPE_GREYSCALE | libtcod.FONT_LAYOUT_TCOD)
    
    # creates the "screen", initialises its size, title and whether it's fullscreen
    libtcod.console_init_root(screen_width, screen_height, 'libtcod tutorial revised', False)
    
    # input storage variables
    key = libtcod.Key()
    mouse = libtcod.Mouse()

    # main loop
    while not libtcod.console_is_window_closed():
        # captures inputs
        libtcod.sys_check_for_event(libtcod.EVENT_KEY_PRESS, key, mouse)

        # sets colour of @
        libtcod.console_set_default_foreground(0, libtcod.white)
        # test 
        # libtcod.console_put_char(0, 1, 1, '@', libtcod.BKGND_NONE)
        # places "player"
        libtcod.console_put_char(0, player_x, player_y, '@', libtcod.BKGND_NONE)
        # refreshes the screen with new info
        libtcod.console_flush()
        
        action = handle_keys(key)

        move = action.get('move')
        exit = action.get('exit')
        fullscreen = action.get('fullscreen')

        if move:
            dx, dy = move
            player_x += dx
            player_y += dy
        
        # useless considering the new code
        #key = libtcod.console_check_for_keypress()

        #if key.vk == libtcod.KEY_ESCAPE:
        #    return True
        
        if exit:
            return True

        if fullscreen:
            libtcod.console_set_fullscreen(not libtcod.console_is_fullscreen())

if __name__ == '__main__':
    main()
